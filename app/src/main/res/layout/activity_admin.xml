<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:orientation="vertical"
    tools:context=".JoseMariaactivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/im3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/categoria"
                android:textColor="@color/colorblack"/>
            <RatingBar
                android:id="@+id/calificacion"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:numStars="5"
                android:rating="0"
                android:scaleX="0.5"
                android:scaleY="0.5" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/telefono"
                android:textColor="@color/colorblack"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_main"
                android:textColor="@color/colorblack"
                android:layout_margin="10dp"
                android:text="(02) 233-2426"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:text="@string/email"/>
            <Button
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:textAllCaps="false"
                android:textColor="@color/colorblack"
                android:background="@drawable/btn_main"
                android:layout_margin="10dp"
                android:text="informacionguaytara@gmail.com"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:text="@string/sitios"/>

            <Button
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:textAllCaps="false"
                android:textColor="@color/colorblack"
                android:background="@drawable/btn_main"
                android:layout_margin="10dp"
                android:text="www.hosteriaguaytara.com"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/galeria"
                android:textColor="@color/colorblack"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/im1"
                        android:background="@drawable/im5"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="7dp"/>

                    <ImageView
                        android:id="@+id/im2"
                        android:background="@drawable/im1"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_toRightOf="@id/im1"
                        android:layout_marginRight="7dp"/>

                    <ImageView
                        android:id="@+id/im3"
                        android:background="@drawable/im2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_toRightOf="@id/im2"
                        android:layout_marginRight="7dp"/>

                    <ImageView
                        android:id="@+id/im4"
                        android:background="@drawable/im3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_toRightOf="@id/im3"
                        android:layout_marginRight="7dp"/>

                    <ImageView
                        android:id="@+id/im5"
                        android:layout_width="200dp"
                        android:background="@drawable/im4"
                        android:layout_height="200dp"
                        android:layout_toRightOf="@id/im4"
                        android:layout_marginRight="7dp"/>

                </RelativeLayout>

            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>